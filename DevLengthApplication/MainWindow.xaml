<Window x:Class="DevLengthApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevLengthApplication"
        mc:Ignorable="d"
        Title="MainWindow">
    <Border Background="Teal" Margin="10" Padding="25">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="25">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" x:Name="pnlInputInfo" Width="300" Height="250">
                    <ComboBox Name="cmbBarSize" Margin="10,10,0,13" Width="200" Height="30" SelectionChanged="cmbBarSize_SelectionChanged"/>
                    <TextBlock Text= "{Binding GetSelectedBarSizeLabel}" />
                </StackPanel>
                <Button x:Name="btnSolve" Click="btnSolve_Click" Width="100" Height="25"/>
            </StackPanel>
            <Canvas x:Name="MainCanvas" Width="300" Height="300" Background="LightGray"/>
        </StackPanel>
    </Border>
</Window>
